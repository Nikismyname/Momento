@model ListToDoCreate
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<form method="post">
    <span asp-validation-for="Name" style="background-color: red; color:white"></span>
    <div class="form-group row">
        <lable for="nameInput" class="col-sm-2 col-form-label text-right">Name</lable>
        <div class="col-sm-6">
            <input id="nameInput" class="form-control-black" asp-for="Name">
        </div>
    </div>
    <div class="form-group row">
        <lable for="descriptionInput" class="col-sm-2 col-form-label text-right">Description</lable>
        <div class="col-sm-6">
            <input id="descriptionInput" class="form-control-black" asp-for="Desctiption">
        </div>
    </div>

    <input asp-for="DirectoryId" hidden="hidden" />

    <button type="submit" class="btn btn-success">Create</button>
    <a class="btn btn-danger" href="@(Constants.ReactAppPath)/@(Model.DirectoryId)">Cancel</a>
</form>

